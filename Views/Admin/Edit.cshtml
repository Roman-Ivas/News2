@model EditNewsAdminViewsModels

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsDTO.Id" />
            <input type="hidden" asp-for="NewsDTO.Image" />
            <div class="form-group">
                <label asp-for="NewsDTO.Title" class="control-label"></label>
                <input asp-for="NewsDTO.Title" class="form-control" />
                <span asp-validation-for="NewsDTO.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDTO.Description" class="control-label"></label>
                <input asp-for="NewsDTO.Description" class="form-control" />
                <span asp-validation-for="NewsDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="NewsDTO.AuthourDTO" class="control-label"></label>
                <select asp-for="NewsDTO.AuthourId" class="form-control" asp-items="@Model.AuthourSL"></select>
            </div>
                        <div class="form-group">
                <label asp-for="NewsDTO.Date" class="control-label"></label>
                <input asp-for="NewsDTO.Date" class="form-control" />
                <span asp-validation-for="NewsDTO.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="mb-3">
                    Current Image:<br />
                    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.NewsDTO.Image!))"
                         class="card-img-bottom w-100" alt="@Model.NewsDTO.Title" />
                </div>
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image"
                       type="file"
                       accept="image/*"
                       class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
